{
  "$schema": "https://schema.hypermode.com/modus.json",
  "endpoints": {
    "default": {
      "type": "graphql",
      "path": "/graphql",
      "auth": "bearer-token"
    }
  },
  "models": {
    "text-generator": {
      "sourceModel": "gpt-4o-mini",
      "connection": "openai",
      "path": "v1/chat/completions"
    },
    "nomic-embed": {
      "sourceModel": "nomic-ai/nomic-embed-text-v1.5",
      "connection": "hypermode-router",
      "path": "v1/embeddings"
    }
  },
  "connections": {
    "openai": {
      "type": "http",
      "baseUrl": "https://api.openai.com/",
      "headers": {
        "Authorization": "Bearer {{API_KEY}}"
      }
    },
    "hypermode-router": {
      "type": "http",
      "baseUrl": "https://models.hypermode.host/",
      "headers": {
        "Authorization": "Bearer {{TOKEN}}"
      }
    },
    "dgraph": {
      "type": "dgraph",
      "connString": "dgraph://hyper-news-labs.hypermode.host:443?sslmode=verify-ca&bearertoken=BroutcRLCwUbKU"
    }
  }
}
